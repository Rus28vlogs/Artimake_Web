@model Artimake_Web.Models.Message

@{
    ViewData["Title"] = "Message Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Message</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Message ID
        </dt>
        <dd class="col-sm-10">
            @Model.MessageId
        </dd>
        <dt class="col-sm-2">
            Customer ID
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerId
        </dd>
        <dt class="col-sm-2">
            Craftsman ID
        </dt>
        <dd class="col-sm-10">
            @Model.CraftsmanId
        </dd>
        <dt class="col-sm-2">
            Message Text
        </dt>
        <dd class="col-sm-10">
            @Model.MessageText
        </dd>
        <dt class="col-sm-2">
            Message Date
        </dt>
        <dd class="col-sm-10">
            @Model.MessageDate.ToString("dd/MM/yyyy HH:mm")
        </dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.MessageId">Edit</a> |
<a asp-action="Index">Back to List</a>
