@model Artimake_Web.Models.Message

@{
    ViewData["Title"] = "Edit Message";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="MessageId" />
    <div class="form-group">
        <label asp-for="CustomerId" class="control-label"></label>
        <input asp-for="CustomerId" class="form-control" />
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CraftsmanId" class="control-label"></label>
        <input asp-for="CraftsmanId" class="form-control" />
        <span asp-validation-for="CraftsmanId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MessageText" class="control-label"></label>
        <textarea asp-for="MessageText" class="form-control"></textarea>
        <span asp-validation-for="MessageText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
