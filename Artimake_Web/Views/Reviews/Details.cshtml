@model Artimake_Web.Models.Review

@{
    ViewData["Title"] = "Review Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.ReviewId
        </dd>
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Name <!-- Предполагается, что у Customer есть свойство Name -->
        </dd>
        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Name <!-- Предполагается, что у Product есть свойство Name -->
        </dd>
        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @Model.Rating
        </dd>
        <dt class="col-sm-2">
            Review Text
        </dt>
        <dd class="col-sm-10">
            @Model.ReviewText
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ReviewId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
