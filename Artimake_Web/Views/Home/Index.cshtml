@model IEnumerable<Artimake_Web.Models.Product>

@{
    ViewData["Title"] = "Products List";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@(product.ProductCategory?.Name ?? "No Category")</td> <!-- Добавлена проверка на null -->
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.ProductId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@product.ProductId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products available.</p>
}

<a asp-action="Create">Create New</a>
