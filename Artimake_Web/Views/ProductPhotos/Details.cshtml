@model Artimake_Web.Models.ProductPhoto

@{
    ViewData["Title"] = "Photo Details";
}

<h1>@ViewData["Title"]]</h1>

<div>
    <h2>Photo @Model.PhotoId</h2>
    <div>
        <strong>Product:</strong> @Model.Product.Name
    </div>
    <div>
        <strong>Photo:</strong>
        <img src="@Url.Content(Model.FilePath)" alt="Product Photo" style="max-width: 500px; height: auto;" />
    </div>

    <a asp-action="Edit" asp-route-id="@Model.PhotoId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
